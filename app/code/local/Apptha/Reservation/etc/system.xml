<config>
	 <tabs>
        <Apptha translate="label" module="reservation">
            <label>Apptha</label>
            <sort_order>200</sort_order>
        </Apptha>
    </tabs>
	<sections>
	  <reservation translate="label" module="reservation">
            <label>Reservation Configuration</label>
            <tab>Apptha</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <reservation_custom_email translate="label" module="reservation">
                    <label>Email Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>122</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        
                        <cancelorder_custom_template translate="label">
                            <label>Cancel Order Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select the email template for cancel the order from the customers</comment>
                        </cancelorder_custom_template>
                        <newproduct_custom_template translate="label">
                            <label>Notify Subscribers When adding Product Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select the email template for Subscribers when adding new product</comment>
                        </newproduct_custom_template>
                    </fields>
                </reservation_custom_email>
           </groups>
        </reservation>
	</sections> 
</config>